
<% if @params && !@params[:errors].empty? %>
  <div class="large-12 cell callout">
    <p>При заполнении формы возникли ошибки</p>
    <ul>
      <% @params[:errors].each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="large-12 cell">
  <form method="post">
    <div class="grid-container">
      <div class="grid-x grid-padding-x">
        <div class="large-12 cell">
        <div class="large-12 cell">
          <label>Дата
            <input type="text" placeholder="2020-01-15" name="date" value="<%= @params && @params[:date] %>">
          </label>       
        <div class="large-12 cell">
          <label>Автор
            <input type="text" placeholder="Автор" name="author" value="<%= @params && @params[:author] %>">
          </label>
        </div>
        <div class="large-12 cell">
          <label>Название
            <input type="text" placeholder="Название" name="name" value="<%= @params && @params[:name] %>">
          </label>
        </div>
        <div class="large-12 cell">
          <label>Формат Чтения (бумажная, электронная, аудио)
            <input type="text" placeholder="бумажная" name="format" value="<%= @params && @params[:format] %>">
          </label>
        </div>
        <div class="large-12 cell">
          <label>Размер книги
            <input type="text" placeholder="" name="value" value="<%= @params && @params[:value] %>">
          </label>
        <div>
        <div class="large-12 cell">
          <label>Оценка
            <input type="text" placeholder="*/10" name="score" value="<%= @params && @params[:score] %>">
          </label>
        </div>
        <div class="large-12 cell">
          <label>Описание
            <input type="text" placeholder="" name="description" value="<%= @params && @params[:description] %>">
          </label>
        </div>
        <div class="large-12 cell">
          <input type="submit" value="Сохранить" class="button">
        </div>
      </div>
    </div>
  </form>
</div>
