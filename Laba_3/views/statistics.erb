<div class="grid-x grid-padding-x">
  <div class="large-12 cell">
    <h3>Статистика</h3>
  </div>

  <div class="large-12 cell">
    <a href="/" class="button">Все записи</a>
    
  </div>

  <div class="large-12 cell">
    <table>
    <thead>
      <tr>
        <th>Года</th>
      </tr>
    </thead>
    <tbody>
      <% @year_hash.each_key do |year| %>
        <tr>            
          <td> <a href="/statistics/<%= year %>" ><%= year %></a> </td>
        </tr>
      <% end %>
    </tbody>
    </table>
  </div>
</div>
